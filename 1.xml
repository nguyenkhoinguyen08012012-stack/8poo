// --- Aspect ratio lock ---
function lock(el, ratio) {
  if (window.innerWidth / window.innerHeight > ratio) {
    el.style.width = window.innerHeight * ratio + 'px';
    el.style.height = '100%';
  } else {
    el.style.width = '100%';
    el.style.height = window.innerWidth / ratio + 'px';
  }
  el.style.margin = 'auto';
  el.style.top = el.style.left = el.style.bottom = el.style.right = '0';
}

function Update() {
