// --- Unity loader with wasm.br part merging ---
var buildUrl = 'https://cdn.jsdelivr.net/gh/z799gs/8poo@main/Build';

async function loadWasmParts() {
  var totalParts = 9;
  var parts = [];
  for (var i = 0; i < totalParts; i++) {
    var resp = await fetch(buildUrl + '/builld.wasm.br.part' + i);
    parts.push(await resp.arrayBuffer());
  }
  var totalSize = parts.reduce(function(sum, p) { return sum + p.byteLength; }, 0);
  var merged = new Uint8Array(totalSize);
  var offset = 0;
  for (var j = 0; j < parts.length; j++) {
    merged.set(new Uint8Array(parts[j]), offset);
    offset += parts[j].byteLength;
  }
  return URL.createObjectURL(new Blob([merged], { type: 'application/wasm' }));
}

async function startGame() {
  var wasmUrl = await loadWasmParts();

  var config = {
    dataUrl: buildUrl + '/builld.data.br',
    frameworkUrl: buildUrl + '/builld.framework.js',
    codeUrl: wasmUrl,
    streamingAssetsUrl: 'StreamingAssets',
    companyName: 'EivaaGames',
    productName: 'Real Pool 3D',
    productVersion: '2.6',
    showBanner: function() {},
  };

  var script = document.createElement('script');
  script.src = buildUrl + '/builld.loader.js';
  script.onload = function() {
    createUnityInstance(canvas, config, function(progress) {
      spinner.style.display = 'none';
      loading_bar_fill.style.width = (111.2 * progress) + '%';
